<h3>予定の新規追加</h3>

<%= form_with model: @user do |f| %>
  <table>
    <tr>
      <th><%= f.label :name ,"タイトル" %></th>
      <td><%= f.text_field :name %></td>
    </tr>

    <tr>
      <th><%= f.label :email ,"開始日" %></th>
      <td><%= f.text_field :email %></td>
    </tr>

    <tr>
      <th><%= f.label :age ,"終了日" %></th>
      <td><%= f.text_field :age %></td>
    </tr>

    <tr>
      <th><%= f.label :introduction ,"スケジュールメモ" %></th>
      <td><%= f.text_area :introduction %></td>
    </tr>
  </table>

  <div>
    <ul>
      <li><%= f.submit "保存"%></li>
      <li><%= link_to "キャンセル", :users %></li>
    </ul>
  </div>
<% end %>